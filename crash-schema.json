{
  "openapi": "3.0.4",
  "info": {
    "title": "Basware.ConnectHub.Api",
    "version": "1.0"
  },
  "paths": {
    "/auth/validate": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Validate token",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/auth/access": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Get access",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccessRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AccessRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AccessRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AccessResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login",
        "parameters": [
          {
            "name": "entry-token",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/auth/onboard": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Onboard",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OnBoardDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/OnBoardDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/OnBoardDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/chat/fetch": {
      "get": {
        "tags": [
          "Chat"
        ],
        "summary": "Fetch messages",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/chat/push": {
      "post": {
        "tags": [
          "Chat"
        ],
        "summary": "Push messages",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostMessageDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PostMessageDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PostMessageDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/chat/mqtt": {
      "get": {
        "tags": [
          "Chat"
        ],
        "summary": "Get mqtt connection",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccessRequest": {
        "required": [
          "accessId"
        ],
        "type": "object",
        "properties": {
          "accessId": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "AccessResponse": {
        "required": [
          "aid",
          "cid",
          "redirect",
          "requiresOnboarding"
        ],
        "type": "object",
        "properties": {
          "redirect": {
            "type": "string"
          },
          "aid": {
            "type": "string"
          },
          "cid": {
            "type": "string"
          },
          "requiresOnboarding": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "CompanyInformation": {
        "required": [
          "city",
          "companyName",
          "country",
          "streetAddress",
          "zipCode"
        ],
        "type": "object",
        "properties": {
          "companyName": {
            "type": "string"
          },
          "streetAddress": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "zipCode": {
            "type": "string"
          },
          "country": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "OnBoardDto": {
        "required": [
          "companyInfo",
          "userInfo"
        ],
        "type": "object",
        "properties": {
          "companyInfo": {
            "$ref": "#/components/schemas/CompanyInformation"
          },
          "userInfo": {
            "$ref": "#/components/schemas/UserInformation"
          }
        },
        "additionalProperties": false
      },
      "PostMessageDto": {
        "required": [
          "content",
          "topicId"
        ],
        "type": "object",
        "properties": {
          "topicId": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "UserInformation": {
        "required": [
          "firstName",
          "lastName"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}